                                                    <option value="Pakistan">pakistan</option>
                                                    <option value="USA">USA</option>

                                                </select>

                                            </div>



                                            <div class="form-group p-0">
                                                <label>City</label>
                                                <select name="tocity" class="form-control mb-3 " style="width: 100%; height:36px;">
                                                    <option value="Lahore">Lahore</option>
                                                    <option value="Islamabad">Islamabad</option>
                                                    <option value="Bahawalpur">Bahawalpur</option>

                                                </select>

                                            </div>


                                            <div class="form-group p-0">
                                                <label>Preferred Pickup Destination</label>
                                                <input name="ppdestination" placeholder="Pickup Destination" class="form-control">

                                            </div>





                                            <div class="form-group p-0">
                                                <label>packages types</label>
                                                <select name="packagetype" class="form-control mb-3 " style="width: 100%; height:36px;">
                                                    <option value="Package 1">Package 1</option>
                                                    <option value="Package 2">Package 2</option>
                                                    <option value="Package 3">Package 3</option>

                                                </select>


                                            </div>




                                            <div class="form-group p-0">
                                                <label>packages sub types</label>
                                                <select name="packagesubtype" class="form-control mb-3 " style="width: 100%; height:36px;">
                                                    <option value="Package subtype 1 ">Package subtype 1</option>
                                                    <option value="Package subtype 2">Package subtype 2</option>
                                                    <option value="Package subtype 3">Package subtype 3</option>

                                                </select>


                                            </div>


                                            <div class="form-group p-0">
                                                <label>Add More Packages Types</label>
                                                <input name="morepackage" placeholder="Add More Packages Type" class="form-control">

                                            </div>





                                            <div class="form-group p-0">
                                                <label>Prefered packages types</label>
                                                <select name="prefferdpackagetypes" class="form-control mb-3 " style="width: 100%; height:36px;">
                                                    <option value="Package 1">Package 1</option>
                                                    <option value="Package 2">Package 2</option>
                                                    <option value="Package 3">Package 3</option>

                                                </select>


                                            </div>
                                            <div class="form-group p-0">
                                                <label>Prefferd delivery time after arival</label>
                                                <input id="tch2" type="text" value="0" name="tch2" data-bts-button-down-class="btn btn-secondary btn-outline" data-bts-button-up-class="btn btn-secondary btn-outline" class="form-control" style="display: block;">
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

